<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="cat.devsofthecoast.bemobiletechtest.feature.transactionsdetails.view.viewmodel.TransactionDetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/tvIdentifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="40dp"
                android:gravity="center"
                android:textAppearance="@style/Widget.MaterialComponents.TextView"
                android:textSize="30sp"
                tools:text="Show all transactions for T8958" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcyTransactionDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="40"
                tools:listitem="@layout/viewholder_transaction_detail" />

            <!-- LOADING -->
            <LinearLayout
                android:id="@+id/llLoadingWrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:showWhen="@{viewmodel.loading}"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="15dp"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/pbrVTT"
                            android:layout_width="@dimen/progressbar_loading_datasize"
                            android:layout_height="@dimen/progressbar_loading_datasize"
                            android:indeterminateTint="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/tvLoadingMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@string/dialog_default_loading_message"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ERROR -->
            <LinearLayout
                android:id="@+id/llErrorWrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:showWhen="@{viewmodel.error}"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    app:cardCornerRadius="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvErrorMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@string/dialog_default_error_message"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/tvErrorAction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@string/dialog_default_error_action"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvErrorMessage" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>